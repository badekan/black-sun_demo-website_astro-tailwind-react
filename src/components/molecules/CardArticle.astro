---
import { tv } from 'tailwind-variants';
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets';
import hoverBaseAndVariant from '../../utils/hoverBaseAndVariant';

interface Props {
  title: string;
  img: any;
}
const { title, img } = Astro.props;
const roundedCard = "rounded-xl";

const cardArticleBody = tv({
  extend: hoverBaseAndVariant,
  base: [
    `${roundedCard} p-6 text-left`,
  ],
  variants: {
    color: {
      gray: true,
    }
  }
});
---
<div class="flex flex-col gap-6">
  <!-- HEAD -->
  <div class="w-full aspect-[269/207] lg:aspect-[357/207] relative">
    <div class="absolute left-0 bottom-0 p-4 z-10">
      <div class="inline-flex items-center bg-white/[.8] gap-2 px-3 py-[2px] rounded-lg">
        <span class="w-1 h-1 bg-black shrink-0 -ml-1"></span>
        <span class="text-xs"> Design</span>
      </div>
    </div>
    <Image class={`object-cover w-full h-full absolute ${roundedCard}`} src={img} alt="." />
  </div>
  <!-- BODY -->
  <button class={cardArticleBody({color:'gray'})}>
    <p class="text-xl font-semibold leading-snug">{title}</p>
    <p class="text-sm leading-normal">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Fugit ....</p>
    <div class="w-full pt-4 flex justify-end"><Icon name="arrow-next" /></div>
  </button>
</div>