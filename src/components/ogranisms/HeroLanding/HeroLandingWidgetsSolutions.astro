---
import HeroLandingWidgetsSolutionsItem from './HeroLandingWidgetsSolutionsItem.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const items = [
  {
    title: 'UX/UI',
    subtitle: 'Design',
    icon: 'ux',
  },
  {
    title: 'App',
    subtitle: 'Development',
    icon: 'app',
  },
  {
    title: 'Software',
    subtitle: 'Development',
    icon: 'software',
  },
  {
    title: 'Blockchain',
    subtitle: 'Infrastructure',
    icon: 'blockchain2',
  },
];
---
<div class="bg-gray-900 rounded-2xl px-6 py-8 md:px-7 md:py-9 overflow-hidden w-full">
  <h2 class="font-semibold text-white text-2xl mb-6">{title}</h2>
  <ul class="-mb-[84px]">
    {items.map((item) => (
      <li class="mb-4">
        <HeroLandingWidgetsSolutionsItem title={item.title} subtitle={item.subtitle} icon={item.icon} />
      </li>
    ))}
  </ul>
</div>
