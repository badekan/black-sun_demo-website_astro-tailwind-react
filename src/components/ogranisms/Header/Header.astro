---
import HeaderMobile from './HeaderMobile.tsx';
import HeaderDesktop from './HeaderDesktop.astro';
import Wrapper from '../../layouts/Wrapper';
import Container from '../../layouts/Container.astro';


/* Types */
export interface HeaderData {
  logo?: {
    label: string;
    href: string;
  };
  nav: {
    label: string;
    href: string;
  }[];
  button?: {
    label: string;
    href: string;
  };
}

interface Props {
	data: HeaderData;
}

const { data } = Astro.props;
---
<Wrapper className='mt-10'>
  <Container>
    <HeaderDesktop data={data} />
    <HeaderMobile data={data} client:only />
  </Container>
</Wrapper>
