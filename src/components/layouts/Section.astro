---
import Wrapper from './Wrapper';
import Container from './Container.astro';

interface Props {
  className?: string;
  gray?: boolean;
}

const { className, gray } = Astro.props;
---
<Wrapper className={[
                      "my-24 sm:my-40",
                      gray && "py-16 sm:py-28 bg-gray-100",
                      className && className
                    ].join(' ')}>
  <Container>
    <slot/>
  </Container>
</Wrapper>
